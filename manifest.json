{
    "manifest_version": 3,
    "name": "spareMyMac",
    "version": "1.0",
    "description": "Save URLs from unopened tabs to Obsidian notes with AI summaries, including YouTube video transcripts",
    "permissions": [
        "tabs",
        "storage",
        "downloads",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ]
}